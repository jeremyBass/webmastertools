<config>
    <modules>
        <Wsu_WebmasterTools>
            <version>1.6.0.0</version>
        </Wsu_WebmasterTools>
    </modules>
    <global>
        <models>
            <webmastertools>
                <class>Wsu_WebmasterTools_Model</class>
            </webmastertools>
        </models>
        <blocks>
            <webmastertools>
                <class>Wsu_WebmasterTools_Block</class>
            </webmastertools>
        </blocks>
        <helpers>
            <webmastertools>
                <class>Wsu_WebmasterTools_Helper</class>
            </webmastertools>
        </helpers>
		<events>
			<controller_action_layout_generate_blocks_after>
				<observers>
					<webmastertools>
						<type>singleton</type>
						<class>webmastertools/observer</class>
						<method>addblock</method>
					</webmastertools>
				</observers>
			</controller_action_layout_generate_blocks_after>
		</events>
    </global>
    <frontend>
        <translate>
            <modules>
                <Wsu_WebmasterTools>
                    <files>
                        <default>Wsu_WebmasterTools.csv</default>
                    </files>
                </Wsu_WebmasterTools>
            </modules>
        </translate>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <webmastertools_order_success>
                        <class>webmastertools/observer</class>
                        <method>setWebmasterToolsOnOrderSuccessPageView</method>
                    </webmastertools_order_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <webmastertools_order_success>
                        <class>webmastertools/observer</class>
                        <method>setWebmasterToolsOnOrderSuccessPageView</method>
                    </webmastertools_order_success>
                </observers>
            </checkout_multishipping_controller_success_action>
            <googlecheckout_block_link_html_before>
                <observers>
                    <webmastertools_googlecheckout_integration>
                        <class>webmastertools/observer</class>
                        <method>injectAnalyticsInGoogleCheckoutLink</method>
                    </webmastertools_googlecheckout_integration>
                </observers>
            </googlecheckout_block_link_html_before>
        </events>
        <layout>
            <updates>
                <webmastertools>
                    <file>webmastertools.xml</file>
                </webmastertools>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Wsu_WebmasterTools>
                    <files>
                        <default>Wsu_WebmasterTools.csv</default>
                    </files>
                </Wsu_WebmasterTools>
            </modules>
        </translate>
    </adminhtml>
</config>
